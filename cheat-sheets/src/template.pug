html
  style.
    html {
      box-sizing: border-box;
    }

    *, *:before, *:after {
      box-sizing: inherit;
    }
    
    body {
      background-color: black;
      color: #ccc;
      padding: 2rem;
      font-family: sans-serif;
      font-size: 1.125rem;
    }

    .app {
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
    }

    .title {
      text-transform: uppercase;
      font-size: 2rem;
    }

    .table-container {
      background-color: #222;
      border-radius: 0.25rem;
      border: 1px solid #444;
      margin-top: 2rem;
    }

    .table-title {
      height: 3rem;
      font-size: 1.5rem;
      display: flex;
      align-items: center;
      padding: 0.5rem;
      border-bottom: 2px solid rgb(0, 89, 255);
      margin: 0;
    }

    .row {
      background-color: rgb(73, 73, 73);
      display: flex;
      align-items: center;
    }

    .row:nth-child(2n - 1) {
      background-color: rgba(255, 255, 255, 0.05);
    }

    .cell {
      border-right: 2px solid gray;
      flex-basis: 0;
      flex-grow: 1;
      padding: 0.5rem 1rem;
    }

    .cell:first-child {
      text-align: right;
    }

    .cell:last-child {
      border: none;
    }

    code {
      font-size: 1rem;
      background-color: rgb(223, 143, 58);
      padding: 0.125rem 0.25rem;
      border-radius: 0.125rem;
      color: black;
    }
  body
    .app
      h1.title= name
      .tables
        each table in data
          .table-container
            h2.table-title= table.title
            .table-data
              each row in table.data
                .row
                  each cell, index in row
                    if index === 0
                      .cell: code !{cell}
                    else
                      .cell !{cell}
